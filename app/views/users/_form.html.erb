<%= form_for @user, :html => { :multipart => true } do |f| %>
<%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
    <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
  	<%= f.label :avatar %>
  	<%= f.file_field :avatar %>
  </p>
  <%= f.submit %>
<% end %>
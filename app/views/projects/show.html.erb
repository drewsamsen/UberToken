<h2><%= @project.name %></h2>

<% content_for :sidebar do %>
	<%= render "sidebar" %>
<% end %>

<%= link_to "", edit_project_path(@project), :id => "edit_link" %>
<%= link_to "", @project, :method => :delete, :confirm => "Are you sure you want to delete this project?", :id => "delete_link" %>

<div id="project-status"></div>

<h4>Assignments</h4>
<ul id="assigned-users">
  <% @project.users.each do |user| %>
    <li>
    	<div class="inner">
    		<div class="img">
    			<div class="avatar">
                    <% if user.avatar.file? %>
                      <img src="<%= make_avatar_url("medium", user.id, user.avatar_file_name) %>" />                     
                    <% end %>    				
    			</div>
    		</div><!--img-->
    		<div class="info">
    			<h5><%= user.name %></h5>
    		</div><!--info-->
    	</div><!--inner-->
    </li>
  <% end %>
</ul>

<div class="clear"></div>

<%= render "assignments_form" %>

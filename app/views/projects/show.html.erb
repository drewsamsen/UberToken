<h2><%= @project.name %></h2>

<b>Assigned Users:</b>
<ul>
  <% @project.users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
</ul>

<%= render "assignments_form" %>

<%= link_to "Edit", edit_project_path(@project) %> |
<%= link_to "Delete", @project, :method => :delete, :confirm => "Are you sure you want to delete this project?" %>
